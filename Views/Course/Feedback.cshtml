@model Candidate

<div>
    <h3 class="display-4">congratulations @Model.FullName</h3>
    <p class="lead">Your applications has been <mark>accepted</mark></p>
    <p class="lead">Many thank for Your interest.</p>

    <hr />

    <blockquote class="blockquote">
        You have enrolled in the @Model.SelectedCourse course. 
    </blockquote>
    <p class="text-muted">You applied at @Model.ApplyAt. </p>

    <div class="btn-group">
        <a class="btn btn-outline-success" href="#">Applications</a>
        <a class="btn btn-outline-success" asp-action="Index" asp-asp-controller="Home">Home</a>

    </div>
   
</div>